<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_selector"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/weather_imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            android:padding="5dp"
            android:layout_gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_weight="7">

        <TextView
            android:id="@+id/weather_day_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceMedium"
            android:lines="2"
            android:gravity="left">

        </TextView>

        <TextView
            android:id="@+id/weather_status_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceSmall"
            android:gravity="left" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        style="@style/ForecastListStyle"
        android:gravity="center"

        android:layout_gravity="center">

        <TextView
            android:id="@+id/weather_max_temp_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:id="@+id/weather_min_temp_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_gravity="center"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>